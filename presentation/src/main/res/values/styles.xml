<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/blue_gnb_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="tv_24sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="tv_24sp_bold_black" parent="tv_24sp">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_24sp_bold_green_amount" parent="tv_24sp">
        <item name="android:textColor">@color/green_amount_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_20sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="tv_20sp_bold_black" parent="tv_20sp">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_20sp_italic_blue" parent="tv_20sp">
        <item name="android:textColor">@color/blue_gnb_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="tv_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="tv_16sp_bold_black" parent="tv_16sp">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_16sp_bold_green" parent="tv_16sp">
        <item name="android:textColor">@color/green_amount_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_16sp_blue" parent="tv_16sp">
        <item name="android:textColor">@color/blue_gnb_color</item>
    </style>

    <style name="fabSettings">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="product_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="transaction_item_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>